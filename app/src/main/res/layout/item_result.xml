<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="item"
            type="com.amap.api.services.core.PoiItem"/>
    </data>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/space_large"
        android:layout_marginRight="@dimen/space_large"
        app:cardCornerRadius="@dimen/space_normal">
        <android.support.constraint.ConstraintLayout
            android:id="@+id/constraintLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/space_large">
            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@id/constraintLayout"
                app:layout_constraintLeft_toLeftOf="@id/constraintLayout"
                android:textColor="@color/textColorPrimary"
                android:textSize="@dimen/h16"
                android:text="@{item.title}"/>
            <TextView
                android:id="@+id/tv_snippet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_normal"
                android:layout_marginBottom="@dimen/space_normal"
                app:layout_constraintTop_toBottomOf="@id/tv_title"
                app:layout_constraintLeft_toLeftOf="@id/constraintLayout"
                android:textColor="@color/textColorPrimaryLight"
                android:textSize="@dimen/h14"
                android:text="@{item.provinceName + item.cityName + item.adName + item.snippet}"/>
            <TextView
                android:id="@+id/tv_tel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/tv_snippet"
                app:layout_constraintLeft_toLeftOf="@id/constraintLayout"
                android:textColor="@color/textColorPrimaryLight"
                android:textSize="@dimen/h14"
                android:text="@{item.tel}"/>
            <TextView
                android:id="@+id/tv_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/tv_tel"
                app:layout_constraintLeft_toLeftOf="@id/constraintLayout"
                android:textColor="@color/textColorPrimaryLight"
                android:textSize="@dimen/h14"
                android:text="@{item.typeDes}"/>
            <TextView
                android:id="@+id/tv_dis"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@id/constraintLayout"
                app:layout_constraintRight_toRightOf="@id/constraintLayout"
                android:textColor="@color/main_color_normal"
                android:textSize="@dimen/h16"
                app:int_string="@{item.distance}"/>
        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>
</layout>
