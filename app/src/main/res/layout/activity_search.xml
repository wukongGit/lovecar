<?xml version="1.0" encoding="utf-8"?>
<layout >
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/rl_head"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_size"
        android:background="@color/main_color_normal">
        <TextView
            android:id="@+id/tv_search"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_marginLeft="@dimen/space_large"
            android:layout_marginRight="@dimen/space_large"
            android:layout_alignParentRight="true"
            android:text="@string/search"
            android:textSize="@dimen/h18"
            android:textColor="@color/white" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_xxlarge"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/tv_search"
            android:layout_marginLeft="@dimen/space_middle"
            android:paddingLeft="@dimen/space_middle"
            android:background="@drawable/bg_border_corners5_white">
            <ImageView
                android:id="@+id/iv_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:paddingRight="@dimen/space_middle"
                android:src="@mipmap/ic_search_delete"
                android:visibility="gone"
                />
            <EditText
                android:id="@+id/et_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/space_xxlarge"
                android:drawableLeft="@mipmap/ic_search"
                android:drawablePadding="@dimen/space_middle"
                android:hint="@string/search_hint"
                android:textColorHint="@color/textColorHint"
                android:textSize="@dimen/h14"
                android:background="@null"
                android:singleLine="true"
                android:imeOptions="actionSearch"/>
        </RelativeLayout>
    </RelativeLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/rc_result"
        android:layout_below="@id/rl_head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></android.support.v7.widget.RecyclerView>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/rc_history"
        android:layout_below="@id/rl_head"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"></android.support.v7.widget.RecyclerView>
    <LinearLayout
        android:id="@+id/ll_ad"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/window_background" />
</RelativeLayout>
</layout>